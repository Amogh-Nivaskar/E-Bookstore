<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Book</h1>
    <div class="col-6 offset-3">
        
        <form action="/books/<%= book._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
            <div class="mb-4">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="book[title]" value="<%= book.title %>" required>
            </div>

            <div class="mb-4">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="book[image]" value="<%= book.image %>" required>
            </div>
            
            <div class="mb-4">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="book[description]" required> <%= book.description %> </textarea>
            </div>
            
            <div class="mb-3">
                <button class="btn btn-success">Update Book</button>
            </div>
            
        </form>
    <!-- <a href="/books">All Books</a> -->
    </div>
</div>

